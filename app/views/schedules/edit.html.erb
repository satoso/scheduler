<%= form_for :schedules do |form| %>
  <%= form.submit "Edit" %>
<table>
  <tr>
    <th>日付</th>
    <th>曜日</th>
    <th>時間</th>
    <% @members.each do |m| %>
      <th><%= link_to m.name, edit_member_schedules_path(m, yyyymm: @from_yyyymm) %></th>
    <% end %>
    <th>memo</th>
  </tr>

  <% @days.each do |d| %>
  <% @times_name.each_with_index do |t, t_idx| %>
    <tr>
      <% if t_idx == 0 %>
        <td rowspan="3"><%= d.strftime('%m/%d') %></td>
        <td rowspan="3"><%= @weekdays_name[d.wday] %></td>
      <% end %>

      <td><%= t %></td>

      <% @members.each do |m| %>
        <td>
          <% entry = @schedules.find { |s| s.date == d && s.time == t_idx && s.member_id == m.id } %>
          <% @schedules_value.each do |val| %>
            <li>
              <%= form.radio_button entry, val, checked: entry.try(:schedule) == val %>
              <%= form.label entry, val, value: val %>
            </li>
          <% end %>
        </td>
      <% end %>

      <td><%= %></td>

    </tr>
  <% end %>
  <% end %>
</table>
<% end %>
